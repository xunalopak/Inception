server {
	listen 443 ssl;
	listen [::]:443 ssl;

	server_name rchampli.42.fr;

	ssl_certificate_key	/etc/nginx/ssl/rchampli.key;
	ssl_certificate		/etc/nginx/ssl/rchampli.crt;

	ssl_protocols		TLSv1.2 TLSv1.3;

	root /var/www/html;
	index index.php index.nginx-debian.html;

	# if a file doesnâ€™t exist, attempt a directory; otherwise, show a 404 Page not found error
	location / {
		try_files $uri $uri/ /index.php$is_args$args;
	}
	# link for wordpress
    location ~ [^/]\.php(/|$) { 
            try_files $uri =404;
            fastcgi_split_path_info ^(.+\.php)(/.+)$;
            fastcgi_pass wordpress:9000;
            fastcgi_index index.php;
            include fastcgi_params;
            fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
            fastcgi_param PATH_INFO $fastcgi_path_info;
        }
}